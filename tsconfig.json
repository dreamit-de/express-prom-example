{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "lib": ["ESNext", "DOM"],
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "declaration": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*"
        ],
        "~/*": [
          "./*"
        ]
      }
    },
    "include": [
      "jest.config.js",
      "src/*",
      "tests/*"],
    "exclude": ["node_modules"]
  }
  